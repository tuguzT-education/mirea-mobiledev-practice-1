<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ToDoList.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.ToDoList</item>
    </style>

    <style name="Theme.ToDoList" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
